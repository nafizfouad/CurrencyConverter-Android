<!-- currency_converter_layout.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2196F3"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Currency Converter"
        android:textSize="24sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/amountEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter amount"
        android:textSize="48dp" />

    <RadioGroup
        android:id="@+id/conversionDirectionRadioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/usdToBdtRadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="USD to BDT" />

        <RadioButton
            android:id="@+id/bdtToUsdRadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BDT to USD" />

        <RadioButton
            android:id="@+id/bdtToInrRadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BDT to INR" />

        <RadioButton
            android:id="@+id/inrToBdtRadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="INR to BDT" />

    </RadioGroup>

    <Button
        android:id="@+id/convertButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Convert" />

    <Button
        android:id="@+id/cancelButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Clear" />

    <TextView
        android:id="@+id/hudatextview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:paddingTop="16dp"
        android:text="Converted Currency"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/resultTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:background="#3F51B5"
        android:paddingTop="16dp"
        android:textSize="28sp"
        android:textStyle="bold" />

</LinearLayout>